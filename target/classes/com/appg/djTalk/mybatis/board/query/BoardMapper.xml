	<select id="getListOfBoard" resultType="DataMap">
		SELECT
		  boardNo AS SEQ,
		  boardContent AS CONTENTS,
		  CONCAT('00', categoryNo) AS TARGETCODE,
		  regDate AS REGDATE
		FROM tblMainBoard
		WHERE (categoryNo = 2 OR categoryNo = 3) AND boardNo > #{seq} AND useYn='Y'
		ORDER BY boardNo
	</select>
	
	<select id="getListOfNotice" resultType="DataMap">
		SELECT 
		  boardNo AS SEQ, 
		  boardContent AS CONTENTS, 
		  regDate AS REGDATE 
		FROM tblMainBoard 
		WHERE categoryNo = 1 AND boardNo > #{seq} AND useYn='Y'
		ORDER BY boardNo
	</select>

	<select id = "testQuery" resultType = "int">
		SELECT 1 FROM DUAL
	</select>
